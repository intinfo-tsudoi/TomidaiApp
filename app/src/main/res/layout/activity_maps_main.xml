<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsMainActivity">

    <Button
        android:id="@+id/Gofuku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onGofukuBtnTapped"
        android:text="五福キャンパス周辺"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/Sugitani"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSugitaniBtnTapped"
        android:text="杉谷キャンパス周辺"
        app:layout_constraintTop_toBottomOf="@+id/Gofuku" />

    <Button
        android:id="@+id/Takaoka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onTakaokaBtnTapped"
        android:text="高岡キャンパス周辺"
        app:layout_constraintTop_toBottomOf="@+id/Sugitani" />

    <Button
        android:id="@+id/Floor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onFloorBtnTapped"
        android:text="五福キャンパス（共通教育棟・学生会館）"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="周辺マップ"
        android:textSize="60sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="フロアマップ"
        android:textSize="60sp"
        app:layout_constraintTop_toBottomOf="@+id/Takaoka" />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onFloorGBtnTapped"
        android:text="五福キャンパス（各学部）"
        app:layout_constraintTop_toBottomOf="@+id/Floor" />

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onFloorSBtnTapped"
        android:text="杉谷キャンパス"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onFloorTBtnTapped"
        android:text="高岡キャンパス"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

</androidx.constraintlayout.widget.ConstraintLayout>