<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/icon_timetable"
        android:onClick="onTimetableBtnTapped"
        android:scaleType="centerInside"
        android:shadowColor="#3F51B5"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="時間割"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#80F44336"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pager" />

    <Button
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/icon_syllabus"
        android:onClick="onSyllabusButtonTapped"
        android:scaleType="centerInside"
        android:shadowColor="#3F51B5"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="シラ\nバス"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#80E91E63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pager" />

    <Button
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/icon_map"
        android:onClick="onMapButtonTapped"
        android:scaleType="centerInside"
        android:shadowColor="#3F51B5"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="キャンパス\nマップ"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#809C27B0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pager" />

    <Button
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/icon_bus"
        android:onClick="onBusBtnTapped"
        android:scaleType="centerInside"
        android:shadowColor="#3F51B5"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="シャ\nトル\nバス"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#80673AB7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pager" />

    <Button
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/icon_setting"
        android:onClick="onSettingBtnTapped"
        android:scaleType="centerInside"
        android:shadowColor="#3F51B5"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="設定\nその他"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#803F51B5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pager" />

    <Button
        android:id="@+id/imageView6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/icon_contact"
        android:onClick="onContactBtnTapped"
        android:scaleType="centerInside"
        android:shadowColor="#3F51B5"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="問い\n合わせ\n先"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#802196F3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pager" />

    <Button
        android:id="@+id/imageView7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="310dp"
        android:background="@drawable/icon_link"
        android:onClick="onLinksBtnTapped"
        android:scaleType="centerInside"
        android:shadowColor="#3F51B5"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="リンク集"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#8003A9F4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pager" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="52dp"
        android:onClick="onTestBtnTapped"
        android:text="TestButton"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />
</androidx.constraintlayout.widget.ConstraintLayout>